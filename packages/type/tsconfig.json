{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "target": "es2018",
    "module": "es2020",
    "esModuleInterop": true,

    "outDir": "./dist/esm",
    "declaration": true,
    "composite": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "types": [
      "reflect-metadata",
      "get-parameter-names",
      "uuid"
    ]
  },
  "include": [
    "src",
    "tests",
    "index.ts"
  ],
  "references": [
    {
      "path": "../core/tsconfig.json"
    }
  ]
}
